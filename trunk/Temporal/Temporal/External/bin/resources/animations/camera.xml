<animation-set>
    <animation id="CAM_ANM_SEARCH" repeat="1">
        <scene-graph-sample>
            <scene-node-sample sprite-group="CAM_ANM_SEARCH" />
        </scene-graph-sample>
    </animation>
    <animation id="CAM_ANM_SEE" repeat="1">
        <scene-graph-sample>
            <scene-node-sample sprite-group="CAM_ANM_SEE" />
        </scene-graph-sample>
    </animation>
    <animation id="CAM_ANM_TURN">
        <scene-graph-sample index="0">
            <scene-node-sample sprite-group="CAM_ANM_TURN" />
        </scene-graph-sample>
		<scene-graph-sample index="3"/>
    </animation>
    <animation id="CAM_ANM_ACQUIRE" repeat="1">
        <scene-graph-sample index="0">
            <scene-node-sample sprite-group="CAM_ANM_SEARCH" />
		</scene-graph-sample>
		<scene-graph-sample index="3">
            <scene-node-sample sprite-group="CAM_ANM_SEE" />
        </scene-graph-sample>
		<scene-graph-sample index="6"/>
    </animation>
</animation-set>